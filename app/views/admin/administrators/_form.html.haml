= form_for [:admin, @admin], html: {autocomplete: 'off', class: 'form-horizontal'} do |f|
  - if @admin.errors.any?
    .alert.alert-danger
      %p.bold= "#{pluralize(@admin.errors.count, "error")} prohibited this admin from being saved:"
      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-sm-6.col-sm-offset-3

      .form-group
        = f.label :name, 'Nombre', class: 'control-label'
        = f.text_field :name, class: 'form-control'

      .form-group
        = f.label :email, 'Correo', class: 'control-label'
        = f.text_field :email, class: 'form-control'

      .form-group
        = f.label :password, 'Contraseña', class: 'control-label'
        = f.password_field :password, autocomplete: "off", class: 'form-control'

      .form-group
        = f.label :password_confirmation, 'Confirmar contraseña', class: 'control-label'
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

  .row
    .col-sm-6.col-sm-offset-3
      %button.btn.btn-primary.btn-raised.pull-right{ type: "submit" }
        Guardar
      %a.btn.btn-warning.btn-raised.pull-right{ href: admin_administrators_path }
        Cancelar

  / = render partial: 'shared/form_actions', locals: { form: f, resource_path: administration_activities_path }
